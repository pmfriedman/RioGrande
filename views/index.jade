extends layout

block content
  h1= title
  p Welcome to #{title}
  if username
    p You are #{username}
    div
      a(href='/gallery/' + username) Gallery
  else
    div
      form(action='/users/login', method='post')
        div
          label Username:
          input(type='text', name='username')
        div
          label Password:
          input(type='password', name='password')
        div
          input(type='submit' value='Log In')
    div
      a(href='/users/register') Register
