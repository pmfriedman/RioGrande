extends layout

block content
    h1 Have you learned today?
    div
        if hasLearned
            img(src='/images/happy.png', class='today-image')
        else if (hasLearned === false)
            img(src='/images/sad.png', class='today-image')
        else
            img(src='/images/unsure.jpg', class='today-image')
    form(method='post', action='/learning/today')
        input(type='submit', name='hasLearned', value='YES')
        input(type='submit', name='hasLearned', value='NO')
        input(type='submit', name='hasLearned', value='RESET')
